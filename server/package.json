{
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "cross-env NODE_ENV=test jest --coverage --detectOpenHandles --forceExit",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:verbose": "cross-env NODE_ENV=test jest --coverage --verbose --detectOpenHandles",
    "test:controllers": "cross-env NODE_ENV=test jest __test__/controllers --coverage",
    "test:helpers": "cross-env NODE_ENV=test jest __test__/helpers --coverage",
    "test:middlewares": "cross-env NODE_ENV=test jest __test__/middlewares --coverage"
  },
  "jest": {
    "testMatch": [
      "**/__test__/*.test.js",
      "**/__test__/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "helpers/**/*.js",
      "middlewares/**/*.js",
      "routes/**/*.js",
      "models/**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!__test__/**"
    ]
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.9.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "google-auth-library": "^10.5.0",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "pg": "^8.17.1",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "sequelize-cli": "^6.6.5",
    "supertest": "^7.2.2"
  }
}
